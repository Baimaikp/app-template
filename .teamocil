# EXAMPLE TEAMOCIL CONFIGURATION
session:
    name: "app-template"
    windows:
        - name: "term"
          clear: true
          root: "~/src/app-template"
          filters:
            before:
              - "workon app-template"
          splits:
            - cmd: "pwd"
              focus: true
        - name: "servers"
          clear: true
          root: "~/src/app-template"
          filters:
            before:
              - "workon app-template"
          splits:
            - cmd: "cd www; pyserve"
        - name: "vim"
          clear: true
          root: "~/src/app-template"
          filters:
            before:
                - "workon app-template"
          splits:
            - cmd: "vim ."
        - name: "assets"
          clear: true
          root: "~/src/app-template"
          filters:
            before:
              - "workon app-template"
          splits:
            - cmd: "fab watch_jst"
            - cmd: "fab watch_assets"
              width: 50

